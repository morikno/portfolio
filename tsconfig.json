{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@*": [".*"],
      "@blog": ["./framework/blog"],
      "@/functions/*":[ "styles/foundation/functions/*"],
      "@/mixin/*":[ "styles/foundation/mixin/*"],
      "@/reset/*":[ "styles/foundation/mixin/utility/*"],
      "@/variable/*":[ "styles/foundation/variable/*"],
      "@/structure/*":[ "styles/structure/*"],
      "@/base/*":[ "styles/foundation/base/*"],
      "@/utility/*":[ "styles/utility/*"],
      "@/object/*":[ "styles/object/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/index.js",
    "pages/_app.js",
    "pages/posts/[id].js",
    "pages/api/hello.js",
    "lib/posts.js",
    "components/date.js",
    "libs/client.tsx"
  ],
  
  "exclude": [
    "node_modules"
  ]
}

